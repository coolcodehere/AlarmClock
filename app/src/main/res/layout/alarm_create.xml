<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/create_alarm_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/new_alarm_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:text="New Alarm" />

    <EditText
        android:id="@+id/date_input"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_input"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="DD/MM/YYYY"
        android:inputType="date" />

    <Button
        android:id="@+id/confirm_alarm_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_input"
        android:layout_marginTop="17dp"
        android:text="Add Alarm" />

    <EditText
        android:id="@+id/time_input"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_input"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/date_input"
        android:layout_toRightOf="@+id/date_input"
        android:ems="10"
        android:hint="HH:MM:SS"
        android:inputType="time" />

    <EditText
        android:id="@+id/name_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_alarm_label"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

</RelativeLayout>